# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[.gitattributes]
indent_size = 16

[*.{diff,patch}]
end_of_line = lf
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.task]
trim_trailing_whitespace = false

[*.ts]
indent_size = 2

[*.yml]
indent_size = 2
